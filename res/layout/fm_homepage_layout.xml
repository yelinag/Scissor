<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" 
    android:background="@drawable/gradient"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Add New Product Details"
        android:textSize="18sp" 
        style="@style/titleText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="12dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Product Name" />

        <EditText
            android:id="@+id/addProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add product name" 
            style="@style/userInputBox"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="12dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/addBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add description" 
            style="@style/userInputBox"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/addFilePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Image" 
            android:textSize = "14sp"
            style="@style/btnStyleGenoa"
            />

        <TextView
            android:id="@+id/filepath"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/productPic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher"
        style="@style/myImageView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <Button
            android:id="@+id/addConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:text="Add"
            style="@style/btnStyleGenoa"
            />

        <Button
            android:id="@+id/skipToFMPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="Go to Home Page"
            style="@style/btnStyleGenoa"
            />         
    </LinearLayout>

    

</LinearLayout>